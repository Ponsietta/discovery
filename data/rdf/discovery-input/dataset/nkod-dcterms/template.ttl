@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sd:    <http://www.w3.org/ns/sparql-service-description#> .

@prefix ldcp:       <https://linked.opendata.cz/vocabulary/ldcp/> .
@prefix configuration-vocabulary:  <https://linked.opendata.cz/ldcp/vocabulary/dataset/dblp/configuration/> .
@prefix d-sparql: <https://linked.opendata.cz/vocabulary/ldcp/datasource/sparql/> .

@prefix dataset:  <https://linked.opendata.cz/ldcp/resource/dataset/nkod-dcterms/> .

dataset:template a ldcp:DataSourceTemplate ;
	dcterms:title "Czech National Open Data Catalog - dataset DC terms only, 1 dataset"@en, "Národní katalog otevřených dat (NKOD) - jen dcterms datasetů"@cs ;
	ldcp:outputTemplate dataset:output ;
	ldcp:componentConfigurationTemplate dataset:defaultConfiguration .

dataset:output a ldcp:OutputDataPortTemplate ;
	ldcp:outputDataSample <https://raw.githubusercontent.com/linkedpipes/discovery/master/data/rdf/datasources/nkod-dcterms/sample.ttl> .
	
dataset:defaultConfiguration a d-sparql:SparqlEndpointDataSourceConfiguration ;
	ldcp:service dataset:defaultService ;
	ldcp:query """
PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dcterms: <http://purl.org/dc/terms/>

CONSTRUCT WHERE {
<https://nkod.opendata.cz/zdroj/datová-sada/247025855> a dcat:Dataset;
    dcterms:title ?title ;
    dcterms:description ?description ;
    dcterms:issued ?issued ;
    dcterms:modified ?modified .
}
	""" ;
	ldcp:configurationQuery """
		PREFIX dcterms: <http://purl.org/dc/terms/>
		PREFIX ldcp: <https://linked.opendata.cz/vocabulary/ldcp/>
		PREFIX configuration-vocabulary: <https://linked.opendata.cz/ldcp/vocabulary/dataset/dblp/configuration/>
		
		CONSTRUCT {
			?config a configuration-vocabulary:Configuration ;
				ldcp:query ?query ;
				dcterms:title ?title .
		} WHERE {
			?config a configuration-vocabulary:Configuration .
			OPTIONAL { ?config ldcp:query ?query . }
			OPTIONAL { ?config dcterms:title ?title . }
		}
	""" .

dataset:defaultService a sd:Service ;
	sd:endpoint <https://nkod.opendata.cz/sparql> .
