
 @prefix dcterms: <http://purl.org/dc/terms/> .
 @prefix ldcp:       <https://linked.opendata.cz/vocabulary/ldcp/> .
 @prefix application:  <https://linked.opendata.cz/ldcp/resource/ldvm/application/dcterms/> .
 @prefix configuration-vocabulary:  <https://linked.opendata.cz/ldcp/vocabulary/application/dcterms/configuration/> .
 @prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
 @prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

 application:template a ldcp:ApplicationTemplate ;
     dcterms:title "DCTerms Application"@en;
     dcterms:description "App that displays dcterms instances"@en;
     ldcp:componentConfigurationTemplate application:defaultConfiguration ;
     ldcp:inputTemplate application:input ;
     ldcp:feature application:defaultFeature ;
     ldcp:executor <https://visualisation-apps.netlify.com/dcterms> .

 configuration-vocabulary:Configuration a rdfs:Class ;
     rdfs:label "Class of configurations of DCTerms Application"@en;
     rdfs:subClassOf ldcp:ComponentConfiguration .

 application:defaultConfiguration a configuration-vocabulary:Configuration ;
     dcterms:title "Default configuration for DCTerms Application"@en ;
     ldcp:configurationQuery """
         PREFIX dcterms: <http://purl.org/dc/terms/>
         PREFIX application:  <https://linked.opendata.cz/ldcp/resource/ldvm/application/dcterms/>
         PREFIX configuration-vocabulary: <https://linked.opendata.cz/ldcp/vocabulary/application/dcterms/configuration/>

         CONSTRUCT {
             ?config a configuration-vocabulary:Configuration ;
                 dcterms:title ?title ;
         } WHERE {
             ?config a configuration-vocabulary:Configuration .
             OPTIONAL { ?config dcterms:title ?title . }
         }
     """ .

 application:input a ldcp:InputDataPortTemplate ;
     dcterms:title "Input of DCTerms Application" .

 application:defaultFeature a ldcp:MandatoryFeature ;
     dcterms:title "The default feature of DCTerms Application" ;
     ldcp:descriptor application:defaultDescriptor .

 application:defaultDescriptor a ldcp:Descriptor ;
     dcterms:title "Checks if default feature of DCTerms Application can be applied." ;
     ldcp:query """
PREFIX dct: <http://purl.org/dc/terms/>
ASK { [] dct:title [] } 

""" ;
     ldcp:appliesTo application:input .
               
